# AtlasBahamas private env template
# Copy to AtlasBahamas.env and fill real values.

SECRET_KEY=REPLACE_WITH_42_PLUS_CHAR_SECRET
REDIS_PASSWORD=REPLACE_WITH_42_PLUS_CHAR_SECRET
DEMO_TENANT_PASSWORD=REPLACE_IF_SEEDING_DEMOS
DEMO_LANDLORD_PASSWORD=REPLACE_IF_SEEDING_DEMOS

PROD_MODE=1
ENFORCE_HTTPS=1
FORCE_SECURE_COOKIES=1
COOKIE_SECURE=1
SESSION_COOKIE_SAMESITE=Strict
SEED_DEMO_USERS=0
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT_MINUTES=15
PASSWORD_HASH_ROUNDS=240000

ATLASBAHAMAS_DB_PATH=./data/atlasbahamas.sqlite
REDIS_URL=redis://:REPLACE_WITH_REDIS_PASSWORD@redis:6379/0

# GitHub deploy workflow secrets
ATLASBAHAMAS_DEPLOY_HOST=example.yourserver.com
ATLASBAHAMAS_DEPLOY_PORT=22
ATLASBAHAMAS_DEPLOY_USER=atlas_deploy
ATLASBAHAMAS_DEPLOY_SSH_KEY=-----BEGIN OPENSSH PRIVATE KEY-----\nreplace_with_real_key\n-----END OPENSSH PRIVATE KEY-----
ATLASBAHAMAS_DEPLOY_PATH=/opt/atlasbahamas
ATLASBAHAMAS_DEPLOY_HOST_FINGERPRINT=SHA256:replace_with_real_host_fingerprint
