# AtlasBahamas local development defaults
# Copy to .env and adjust for your environment.

HOST=0.0.0.0
PORT=5000
APP_PORT=5000
WEB_PORT=80

PROD_MODE=0
ENFORCE_HTTPS=0
FORCE_SECURE_COOKIES=0
COOKIE_SECURE=0
SECURITY_HEADERS_ENABLED=1
SESSION_COOKIE_SAMESITE=Lax
SESSION_TIMEOUT_MINUTES=60
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT_MINUTES=15
PASSWORD_HASH_ROUNDS=240000

SECRET_KEY=REPLACE_WITH_64_PLUS_CHAR_RANDOM_SECRET

DATABASE_PATH=/app/data/atlasbahamas.sqlite
POSTGRES_REQUIRED=0
POSTGRES_DB=atlasbahamas
POSTGRES_USER=atlasbahamas
POSTGRES_PASSWORD=REPLACE_WITH_STRONG_DB_PASSWORD
POSTGRES_DSN=postgresql://atlasbahamas:REPLACE_WITH_STRONG_DB_PASSWORD@postgres:5432/atlasbahamas
POSTGRES_PORT=5432

REDIS_PASSWORD=REPLACE_WITH_STRONG_REDIS_PASSWORD
REDIS_URL=redis://:REPLACE_WITH_STRONG_REDIS_PASSWORD@redis:6379/0
REDIS_SESSIONS_ENABLED=1

STORAGE_ROOT=/app/storage
UPLOAD_DIR=/app/storage
LOG_DIR=/app/data/logs

SEED_DEMO_DATA=0
CLEAR_SESSIONS_ON_START=0
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_HOSTS=localhost,127.0.0.1

# Optional first-admin bootstrap
BOOTSTRAP_ADMIN_FULL_NAME=
BOOTSTRAP_ADMIN_PHONE=
BOOTSTRAP_ADMIN_EMAIL=
BOOTSTRAP_ADMIN_USERNAME=
BOOTSTRAP_ADMIN_PASSWORD=REPLACE_WITH_STRONG_ADMIN_PASSWORD
SMTP_PASS=REPLACE_WITH_SMTP_APP_PASSWORD_OR_LEAVE_EMPTY
