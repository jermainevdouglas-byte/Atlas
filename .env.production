# AtlasBahamas production environment template
# Set these values in Render dashboard for live deploy.

HOST=0.0.0.0
PORT=10000
PROD_MODE=1
DEBUG=0

# Security + session
SECRET_KEY=SET_IN_RENDER_SECRET_KEY
SESSION_COOKIE_NAME=ATLASBAHAMAS_SESSION
COOKIE_SECURE=1
FORCE_SECURE_COOKIES=1
SESSION_COOKIE_SAMESITE=Strict
SECURITY_HEADERS_ENABLED=1
ENFORCE_HTTPS=1
ALLOWED_HOSTS=.onrender.com
CSRF_TRUSTED_HOSTS=.onrender.com
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_TIMEOUT_MINUTES=15
PASSWORD_HASH_ROUNDS=240000

# Runtime storage
ATLASBAHAMAS_DB_PATH=/var/data/atlasbahamas.sqlite
SEED_DEMO_USERS=0

# Optional Redis hardening for distributed deployments
REDIS_URL=SET_IN_RENDER_REDIS_URL
